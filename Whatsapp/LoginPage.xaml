<Page x:Class="Whatsapp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Whatsapp"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1100"
      Title="LoginPage">

    <Grid>

        <TextBox  Name="username" Height="30" Width="200" Margin="0,-50,0,0" />
        <TextBox  Name="password" Height="30" Width="200" Margin="0,50,0,0"  />

        <Button  Name="login" Click="LoginClick" Content="Login" Width="60" Height="30" Margin="0,200,0,0"  />


    </Grid>
</Page>
